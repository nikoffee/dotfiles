[include]
  path = "/Users/greg/.work.gitconfig"
[includeIf "gitdir/i:~/src/github.com/nikoffee/**"]
  path = "/Users/greg/.home.gitconfig"

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[merge]
  tool = Kaleidoscope
  ff = only
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[mergetool]
  prompt = false
  keepBackup = false
[diff]
  tool = Kaleidoscope
  algorithm = patience
  mnemonicprefix = true

[pull]
  rebase = true
[push]
  default = simple
[core]
	excludesfile = /Users/greg/.config/git/ignore
  autocrlf = input
[help]
  autocorrect = 1

[color]
  ui = true
[color "branch"]
  current = green reverse
  local = yellow
  remote = red
[color "status"]
  added = green
  changed = yellow
  untracked = red

[alias]
  br = branch --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  d = diff
  dc = diff --cached
  dt = difftool
  s = status
  c = commit
  ca = commit --amend --no-edit
  cl = clone
  ch = checkout
  a = add
  w = whatchanged
  b = branch -av
  f = fetch
  unstage = reset HEAD --
  last = log -1 -p HEAD
  ls = log --full-diff -p
  l = log
  prune = fetch --prune
  undo = reset --soft HEAD^
  u = undo
  stash-all = stash save --include-untracked
  sa = stash-all
  glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  churn = !git log --all -M -C --name-only --format='format:' "$@" | sort | grep -v '^$' | uniq -c | sort | awk 'BEGIN {print "count,file"} {print $1 "," $2}'
  hidden = !git ls-files -v | grep "^[a-z]"
  hide = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged
  ignored = !git status -s --ignored | grep \"^!!\"
[protocol]
  version = 2
  recent-branches = !git for-each-ref --count=15 --sort=-committerdate refs/heads/ --format='%(refname:short)'
[credential]
	helper = osxkeychain
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
